{
    "name": "bvcmxy/php-code-rules",
    "description": "PHP Code Rules",
    "authors": [
        {
            "name": "Bogdan Vivian",
            "email": "vivianbogdan@gmail.com"
        }
    ],
    "require-dev": {
        "phpmd/phpmd": "^2.10",
        "sebastian/phpcpd": "^6.0",
        "phpstan/phpstan": "^1.1",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "post-install-cmd": [
            "composer require phpmd/phpmd",
            "composer require sebastian/phpcpd",
            "composer require squizlabs/php_codesniffer",
            "composer require friendsofphp/php-cs-fixer",
            "composer require phpstan/phpstan"
        ],
        "post-update-cmd": [
            "composer update phpmd/phpmd",
            "composer update sebastian/phpcpd",
            "composer update squizlabs/php_codesniffer",
            "composer update friendsofphp/php-cs-fixer",
            "composer update phpstan/phpstan"
        ]
    }
}
